@model Article
@{
    ViewData["Title"] = "CreateArticle";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Yeni Blog Yazısı</h2>
                </div>
            </div>
        </div>
        <div class="row column1">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="white_shd full margin_bottom_30">
                    <div class="full price_table padding_infor_info">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="full inner_elements margin_top_30">
                                    <div class="tab_style2">
                                        <div class="tabbar">
                                            <nav>
                                                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                                    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#recent_activity" role="tab" aria-selected="true">Yazı Bilgilerini Giriniz</a>
                                                </div>
                                            </nav>

                                            <form method="post" asp-action="CreateArticle" asp-controller="Article">
                                                <div class="tab-content" id="nav-tabContent">
                                                    <div class="tab-pane fade show active" id="recent_activity" role="tabpanel" aria-labelledby="nav-home-tab">
                                                        <div class="msg_list_main">
                                                            <label>Yazı Başlığı</label>
                                                            <input type="text" asp-for="Title" class="form-control" />
                                                            <span class="text-danger" asp-validation-for="Title"></span>
                                                            <br />
                                                            <label>Yazı Açıklaması</label>
                                                            <input type="text" asp-for="Description" class="form-control" />
                                                            <span class="text-danger" asp-validation-for="Description"></span>
                                                            <br />
                                                            <label>Kapak Fotoğraf Url</label>
                                                            <input type="text" asp-for="CoverImageUrl" class="form-control" />
                                                            <span class="text-danger" asp-validation-for="CoverImageUrl"></span>
                                                            <br />
                                                            <label>Kategori</label>
                                                           @*  <input type="text" asp-for="CategoryId" class="form-control" /> *@
                                                            @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.CategoryList, new { @class = "form-control" })

                                                            <span class="text-danger" asp-validation-for="CategoryId"></span>
                                                            <br />
                                                            <button type="submit" class="btn cur-p btn-success">Yazıyı Ekle</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
    </div>
</div>
