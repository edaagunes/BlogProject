@model List<Article>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Makale Listesi</title>
    <link rel="stylesheet" href="~/css/Article.css">
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <h2>Kategoriler</h2>
            <ul>
                <li><a href="#">Dashboard</a></li>
                <li><a href="#">Profilim</a></li>
                <li><a href="/Author/Article/MyArticleList/">Yazılarım</a></li>
                <li><a href="#">Yorumlarım</a></li>
                <li><a href="#">Siteye Git</a></li>
                <li><a href="#">Çıkış Yap</a></li>
            </ul>
        </aside>

        <!-- Main Content -->
        <main class="content">
            <h1>Kullanıcı Makaleleri</h1>
            <div class="article-list">
                @foreach (var item in Model)
                {
                    <div class="article">
                        <h3>@item.Title</h3>
                        <p><strong>Tarih:</strong> @item.CreatedDate.ToString("dd-MMM-yyyy")</p>
                        <a href="btn btn-primary">Yazıyı Düzenle</a>
                    </div>
                }
               
               
            </div>
        </main>
    </div>
</body>
</html>
